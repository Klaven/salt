{% set kube_servers = [] -%}
{% for server, ipaddr in salt['mine.get']('roles:kube-master', 'network.ip_addrs', expr_form='grain').items() -%}
  {% do kube_servers.append(ipaddr[0]) -%}
{% endfor -%}

apiVersion: v1
clusters:
- cluster:
    certificate-authority: {{ ca_crt }}
    server: https://{{ kube_servers[0] }}:{{ pillar['ssl_port'] }}
  name: default-cluster
contexts:
- context:
    cluster: default-cluster
    user: default-admin
  name: default-system
current-context: default-system
kind: Config
preferences: {}
users:
- name: default-admin
  user:
    client-certificate: {{ node_crt }}
    client-key: {{ node_key }}
